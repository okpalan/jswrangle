{
    "compilerOptions": {
        // "module": "Node16",
        "target": "Es2020",
        "allowJs": true,
        "checkJs": false,
        "lib": ["es2015"],
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "typeRoots": ["exclude/src/@types/**/*", "exclude/src/@types/*", "node_modules/@types"],
        "baseUrl": "exclude/src",
        "paths": {
            "*": ["*",] // this is the important part
        },
        "outDir": "dist",
        "experimentalDecorators": true,
        "removeComments": false
    },
    "exclude": ["node_modules", "dist","exclude"],
    "include": ["exclude/src/**/*","exclude/src/*"]
}